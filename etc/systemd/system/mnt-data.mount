[Unit]
Description=OverlayFS Mount for /data
# Removed explicit dependencies on individual mounts to avoid hang if drives aren't available

[Mount]
What=overlay
Where=/mnt/data
Type=overlay
Options=lowerdir=/mnt/sda:/mnt/sdb:/mnt/sdc,upperdir=/mnt/ssd_upperdir,workdir=/mnt/ssd_workdir,x-systemd.requires-mounts-for=/cache
DirectoryMode=0755

[Install]
WantedBy=multi-user.target
